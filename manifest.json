{
  "manifest_version": 3,
  "name": "YouTube Title Modifier",
  "version": "1.0",
  "description": "Chrome extension to modify or remove YouTube video titles.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.youtube.com/*",
        "https://*.youtube.com/*"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ],
  "commands": {
    "hide": {
      "suggested_key": {
        "default": "Ctrl+M"
      },
      "description": "Hide title on the current page"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Open the popup"
    }
  },
  "action": {
    "default_popup": "popup.html"
  }
}